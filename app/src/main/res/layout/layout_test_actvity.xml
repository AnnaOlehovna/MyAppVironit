<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/v_root_test_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/btn_show_dialog_with_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_show_dialog_with_options"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_show_dialog_simple_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_show_dialog_simple_message"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btn_show_avtoclosable_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_show_avtoclosable_message"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_show_message_with_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_show_message_with_action"
        android:layout_gravity="center"/>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>